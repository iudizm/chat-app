<h1>New Messages</h1>

<%= turbo_frame_tag "new_message", target: "_top" do %>
    <%= form_with( model: [@message.channel, @message]) do |form| %>
        <div class="field input-group mb-3">
            <%= form.text_field :content, class: "form-control", placeholder: "Type a message..." %>
            <%= form.submit "Send message", class: "btn btn-outline-primary" %>
        </div>
    <% end %>
<% end %>

<%= link_to "Back", @message.channel %>